<%@page import="za.ac.tut.model.entity.UserGuess"%>
<%@page import="za.ac.tut.model.entity.ComputerGeneratedValue"%>
<%@page import="za.ac.tut.model.entity.GameSummary"%>
<%@page import="java.util.List"%>
<%@page contentType="text/html" pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <title>Games Outcome Page</title>
    </head>
    <body>
        <h1>Games outcome</h1>
        <%
            List<GameSummary> games = (List<GameSummary>)request.getAttribute("gameStatistics");
            String id = (String)request.getAttribute("id");
        %>
        <p>
            Below is the summary of all the games played by user with ID <b><%=id%></b>.
        </p>
        <table>
            <%
                int cnt = 1;
                for(int i = 0; i < games.size(); i++){
                    GameSummary gs = games.get(i);
                    Integer numGamesPlayed = gs.getNumGamesPlayed();
                    Integer compScore = gs.getComputerScore();
                    Integer userScore = gs.getUserScore();
                    Integer numTies = gs.getNumTies();
                    String name = gs.getUserName();
                    List<ComputerGeneratedValue> computerValues = gs.getComputerValues();
                    List<UserGuess> userGuesses = gs.getUserGuesses();
                %>
                <tr>
                    <td><u><i><b>Details of game <%=cnt++%></b></i></u></td>
                </tr>
                <tr>
                    <td>Number of games played: <b><%=numGamesPlayed%></b></td>
                </tr>
                <tr>
                    <td>Number of games won by <b>Siri</b>: <b><%=compScore%></b></td>
                </tr>
                <tr>
                    <td>Number of games won by <b><%=name%></b>: <b><%=userScore%></b></td>
                </tr>
                <tr>
                    <td>Number of ties: <b><%=numTies%></b></td>
                </tr>
                <tr>
                    <td>Values generated by the computer: <b><%=computerValues%></b></td>
                </tr>
                <tr>
                    <td>Guesses by <b><%=name%></b>: <b><%=userGuesses%></b></td>
                </tr>
                <%
                }
            %>
        </table>
        <p>
            Please select one of the following options:
        </p>
        <ul>
            <li><a href="game_stats_menu.jsp">Go back to game statistics menu.</a></li>
            <li><a href="menu.jsp">Go to the main menu.</a></li>
            <li><a href="LogoutServlet.do">Logout.</a></li>
        </ul>        
    </body>
</html>
